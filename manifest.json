{
    "manifest_version": 3,
    "name": "Respify | A TailwindCSS responsive tooltip",
    "version": "1.0",
    "description": "A minimalist and effective tool to display TailwindCSS responsive breakpoints for easy reference during development.",
    "icons": {
        "48": "src/images/48.png"
    },
    "action": {
        "default_popup": "src/pages/popup.html",
        "default_icon": "src/images/48.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "notifications"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "src/scripts/content.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}